#version 330 core
out vec4 FragColor;

in vec2 TexCoords;

uniform float Time;
uniform sampler2D texTure;
uniform sampler2D textureColor;

void main()
{
    vec3 color = texture(textureColor, TexCoords).rgb;
    float sd = texture(texTure, TexCoords).r;
    //sd = max(min(1.0, sd), 0.0);
    float body = smoothstep(0.375, 0.625, sd);
    FragColor =  vec4(body, body, body, body);
}

